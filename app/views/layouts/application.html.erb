<!DOCTYPE html>
<html>
<head>
  <title>UniversityRegistration</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header class="main">
  <h1><%= @page_title %></h1>
</header>
<section class="content">
  <nav class="side_nav">
    <ul>
      <li><a href="/">Home</a></li>
      <% if user_signed_in? %>
        <% if current_user.profile %>
          <li><%= link_to "Profile", profile_path(current_user.profile) %></li>
        <% else %>
          <li><%= link_to "Create Profile", new_profile_path %></li>
        <% end %>
        <%# if current_user. %>
         <li><a href="/courses">Course List</a></li>
         <li><a href="/semesters">Semester</a></li>
         <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      <% end %>
    </ul>
  </nav>
  <main class='<%= controller.controller_name %>'>
    <%= yield %>
  </main>
  âž¤
</section>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>
</html>

